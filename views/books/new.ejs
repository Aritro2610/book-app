<h2>New Book</h2>
<form action="/books" method="POST" >
    <div>
        <label>Title</label>
        <input type="text" name="title" value="<%= book.title %>"/>
    </div>
    <div>
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author =>{ %>
                <% if(author.id ===  book.author){ %>
                    <option selected label="<%= author.name %>" value="<%= author.id %>">
                <% } else{ %>
                    <option label="<%= author.name %>" value="<%= author.id %>">
                <% } %>
            <% }) %>
        </select>
    </div>

    <div>
        <label>Published Date</label>
        <input type="date" name="PublishDate"
        value="<%= book.PublishDate == null ? '' : book.PublishDate.toISOString().split('T')[0] %>"/>
    </div>
    <div>
        <label>Page Count</label>
        <input type="number" name="pageno" min="1" value="<%= book.pageno %>"/>
    </div>
    <div>
        <label>Cover</label>
        <input type="file" name="cover" class="filepond" multiple required/>
    </div>
    <div>
        <label>Description</label>
        <textarea name="description" cols="30" rows="10"><%= book.description %></textarea>
    </div>
    <a href="/books">Cancel </a>
    <br><br>
    <button type="submit">Create</button>
</form>



