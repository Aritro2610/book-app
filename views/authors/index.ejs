<h2>Search Author</h2>
<form action="/authors" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>

<br>
<% authors.forEach(author=>{%>
    <div><%= author.name %></div>
    <a href="/authors/<%= author.id%>" style="text-decoration: none;">View</a>
    <a href="/authors/<%= author.id%>/edit" style="text-decoration: none;">Edit</a>
    <%- include('../partials/deleteform.ejs',{url:`/authors/${author.id}`})%>
    <!-- <button>Delete</button> -->
<%})%>
